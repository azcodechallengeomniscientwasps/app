    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.makeapede.azcodechallengeapp.games.CountingActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linearLayout5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="279dp">

            <ImageView
                android:id="@+id/fish1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/fish_orange"/>

            <ImageView
                android:id="@+id/fish2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/fish_blue"/>

            <ImageView
                android:id="@+id/fish3"
                android:layout_width="65dp"
                android:layout_height="65dp"

                android:layout_weight="1"
                app:srcCompat="@mipmap/fish_orange"
                tools:layout_editor_absoluteX="160dp"
                tools:layout_editor_absoluteY="374dp"/>

            <ImageView
                android:id="@+id/fish4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/imageView8"
                app:layout_constraintRight_toLeftOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                app:srcCompat="@mipmap/fish_blue"/>

            <ImageView
                android:id="@+id/fish5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/fish_orange"
