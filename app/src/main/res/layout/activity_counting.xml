                app:layout_constraintRight_toLeftOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/imageView7"
                app:srcCompat="@mipmap/fish_blue"/>

            <ImageView
                android:id="@+id/fish7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                app:layout_constraintRight_toLeftOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:srcCompat="@mipmap/fish_orange"/>

            <ImageView
                android:id="@+id/fish8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/fish_blue"/>

            <ImageView
                android:id="@+id/fish9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                app:layout_constraintRight_toLeftOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:srcCompat="@mipmap/fish_orange"/>

            <ImageView
                android:id="@+id/fish10"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                app:layout_constraintRight_toLeftOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/imageView6"
                app:srcCompat="@mipmap/fish_blue"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
